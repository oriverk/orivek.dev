---
import { ViewTransitions } from "astro:transitions";
import defaultOgImage from "@/assets/images/og.png";
import ContentWrapper from "@/components/ui/ContentWrapper.astro";
import urlJoin from "url-join";
import Footer from "./Footer.astro";
import Header from "./Header.astro";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  pagefind?: boolean;
}

const { href, hostname } = Astro.url;
const { title, description, image, noindex, pagefind } = Astro.props;
const siteName = hostname;
const siteTitle = title ? `${title} | ${siteName}` : siteName;
const ogImage = image ?? defaultOgImage.src;
const rssHref = Astro.site
  ? urlJoin(Astro.site.toString() ?? "", "rss.xml")
  : undefined;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{siteTitle}</title>
    {noindex && <meta name="robots" content="noindex" />}
    <meta name="viewport" content="width=device-width" />
    <meta name="format-detection" content="email=no,telephone=no,address=no" />
    <link rel="canonical" href={href} />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" sizes="32x32" href="/favicon.ico">
    <link rel="manifest" href="/site.webmanifest">
    <link href="/sitemap-index.xml" rel="sitemap" />
    {rssHref && (
      <link rel="alternate" type="application/rss+xml" title={siteName} href={rssHref} />
    )}
    <meta name="theme-color" content="#00e1ee">
    <meta name="generator" content={Astro.generator} />
    <meta property="og:url" content={href} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={siteTitle} />
    {description && <meta name="og:description" content={description} />}
    <meta property="og:type" content="article" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:image" content={ogImage} />
    <meta content="ja_JP" property="og:locale" />
    <ViewTransitions />
  </head>
  <body>
    <div id="astro">
      <header>
        <ContentWrapper>
          <Header />
        </ContentWrapper>
      </header>
      <main data-pagefind-body={!!pagefind && !noindex}>
        <slot />
      </main>
      <footer>
        <ContentWrapper>
          <Footer />
        </ContentWrapper>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  /* TailwindCSS default breakpoints
    xs => @media (min-width: 320px) { ... }
    sm => @media (min-width: 640px) { ... }
    md => @media (min-width: 768px) { ... }
    lg => @media (min-width: 1024px) { ... }
    xl => @media (min-width: 1280px) { ... }
    2xl => @media (min-width: 1536px) { ... } */

  :root {
    --header-height: 4rem;
    --max-width: 850px;
    --color-white: 250 250 250;
    --color-gray: 156 163 175;
    --color-lightgray: 179 179 179;
    --color-black: 26 32 44;
    --color-miku: 0 225 238;
    --color-tiwtter: 29 161 242;
    --color-github: 24 23 23;
    --color-hover: 51 65 85;
    --accent: 0, 115, 230;
    --accent-gradient: linear-gradient(
      to top right,
      rgb(0, 230, 145) 0%,
      rgb(0, 229, 146) 9.1%,
      rgb(0, 226, 150) 16.8%,
      rgb(0, 221, 156) 23.5%,
      rgb(0, 214, 163) 29.2%,
      rgb(0, 206, 171) 34.4%,
      rgb(0, 197, 180) 39.1%,
      rgb(0, 187, 188) 43.6%,
      rgb(0, 176, 196) 48.2%,
      rgb(0, 165, 204) 53%,
      rgb(0, 153, 209) 58.3%,
      rgb(0, 142, 218) 64.3%,
      rgb(0, 132, 223) 71.3%,
      rgb(0, 123, 227) 79.4%,
      rgb(0, 117, 229) 88.9%,
      rgb(0, 115, 230) 100%);
    --cubic-bezier: cubic-bezier(0.22, 1, 0.36, 1);
  }

  :where(*, *::before, *::after):not(mark) {
    color: rgb(var(--color-white));
    border-width: 0;
    border-style: solid;
    box-sizing: border-box;
    word-wrap: break-word;
  }

  html {
    font-family: system-ui, sans-serif;
    /* background-color: #f6f6f6; */
    background-color: rgb(var(--color-black));
  }

  body {
    margin: 0;
  }

  a {
    color: rgb(var(--color-miku));
    text-decoration: none;
  }

  a:hover {
    text-decoration-line: underline;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  main > * {
    scroll-snap-align: end;
  }
</style>

<style>
  #astro {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  #astro > * {
    width: 100%;
  }

  header {
    position: fixed;
    top: 0;
    z-index: 1;
    background-color: rgba(var(--color-black) / 0.1);
    backdrop-filter: blur(5.4px);
  }

  main {
    flex-grow: 1;
    /* display: flex; */
    /* flex-direction: column; */
    scroll-snap-type: y mandatory;
    margin-top: var(--header-height);
  }
</style>
